{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"isolatedModules": true,
		"noImplicitAny": false,
		"rootDirs": ["src", "stories"],
		"declaration": true,
		"typeRoots": ["node_modules/@types", "./types/navigation", "./types/*"],
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"module": "esnext",
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@preferences": ["./types/preferences.d"],
			"@ctypes/*": ["./types/*"],
			"@util/*": ["./util/*"],
			"@helpers/*": ["./helpers/*"],
			"@screens/*": ["./screens/*"],
			"@assets/*": ["./assets/*"],
			"@components/*": ["./components/*"],
			"@graphql/*": ["./graphql/*"],
			"@library/*": ["./library/*"],
			"@context/*": ["./context/*"],
			"@constants/*": ["./constants/*"],
			"@reactive": ["./reactive/index.tsx"]
		},
		"plugins": [
			{
				"name": "typescript-styled-plugin",
				"lint": {
					"validProperties": [
						"aspect-ratio",
						"elevation",
						"margin-vertical",
						"margin-horizontal",
						"padding-horizontal",
						"padding-vertical",
						"resize-mode",
						"shadow-color",
						"shadow-opacity",
						"shadow-offset",
						"shadow-radius",
						"text-align-vertical",
						"tint-color"
					]
				}
			}
		],
		"types": ["jest", "styled-components-react-native"]
	}
}
